<div class="jumbotron">
  <h1>Search for a user, a tweet or a hashtag</h1>
</div>

<div class="container" style="margin: 70px">
  <div class="col-md-6 col-md-offset-3">
    <form action='/tweets/search' method='POST'>
      <div class="form-group">
        <label for="user"> user: </label>
        <input type="text" name='sessions[user]' class="form-control" id="user" placeholder="Enter user" required="true">
      </div>

      <div class="form-group">
        <label for="keyword"> keyword: </label>
        <input type="text" name='sessions[keyword]' class="form-control" id="keyword" placeholder="Enter keyword" required="true">
      </div>

      <div class="form-group">
        <label for="hashtag"> keyword: </label>
        <input type="text" name='sessions[hashtag]' class="form-control" id="hashtag" placeholder="Enter hashtag" required="true">
      </div>

      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
</div>