<form action='/login' method='POST'>
  <div class="form-group">
    <label for="email"> email: </label>
    <input type="text" name='sessions[email]' class="form-control" id="email" placeholder="Enter email" required="true">
  </div>

  <div class="form-group">
    <label for="password"> password: </label>
    <input type="password" name='sessions[password]' class="form-control" id="password" placeholder="Enter password" required="true">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>