<img class="card-img-top" src="/avatar.png" alt="Card image cap">
<div class="card-body">
  <h5 class="card-title"><%=user.name%></h5>
  <p class="card-text">
    <div class="row">
      <div class="col-4">
        Tweets:
        <br/>
        <a href="/user/<%= user.id %>">
          <strong class="stats-num"><%= user.tweets.length %></strong>
        </a>
      </div>
      <div class="col-4">
        Following:
        <br/>
        <a href="/user/<%= user.id %>/following">
          <strong class="stats-num"><%= user.following.length %></strong>
        </a>
      </div>
      <div class="col-4">
        Followers:
        <br/>
        <a href="/user/<%= user.id %>/followers">
          <strong class="stats-num"><%= user.followers.length %></strong>
        </a>
      </div>
    </div>
  </p>
</div>